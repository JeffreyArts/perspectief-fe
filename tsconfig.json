{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "noEmitOnError": false
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.d.ts", 
    "src/types/three-env.d.ts", 
    "src/**/*.tsx", 
    "src/**/*.vue", 
    "src/assets/gsap/MorphSVGPlugin.js"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
